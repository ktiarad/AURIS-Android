<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailDictionaryActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_dict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/yellow_800"
        android:background="@color/indigo_900"
        app:tabIndicatorColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_itemdict"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tabs_dict"
        tools:listitem="@layout/item_dictionary" />

</androidx.constraintlayout.widget.ConstraintLayout>